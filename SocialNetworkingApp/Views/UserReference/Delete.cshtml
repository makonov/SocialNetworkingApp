@model SocialNetworkingApp.Models.User
<div class="container">
    <div>
        <h2>Вы уверены, что хотите удалить этого пользователя?</h2>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Логин пользователя
            </dt>
            <dd class="col-sm-10">
                @Model.UserName
            </dd>

            <dt class="col-sm-2">
                Фамилия пользователя
            </dt>
            <dd class="col-sm-10">
                @Model.LastName
            </dd>

            <dt class="col-sm-2">
                Имя пользователя
            </dt>
            <dd class="col-sm-10">
                @Model.FirstName
            </dd>

            <dt class="col-sm-2">
                Группа
            </dt>
            <dd class="col-sm-10">
                @(Model.Group != null ? Model.Group.GroupName : "нет")
            </dd>
        </dl>

        <br />

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <div class="form-actions no-color">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Удалить" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Отменить</a>
            </div>
        </form>
    </div>
</div>

<style>
    dl.row {
        width: 100%;
        margin: 0;
        border-spacing: 0;
        border-collapse: separate;
    }

    dt {
        display: table-cell;
        padding: 10px;
        border: 1px solid #dee2e6;
    }

    dt {
        font-weight: bold;
    }

    dd {
        padding-top: 10px;
    }

</style>
