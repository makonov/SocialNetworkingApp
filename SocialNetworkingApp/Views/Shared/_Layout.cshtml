<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GIFgram</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SocialNetworkingApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="sticky-top">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 align-content-center">
            <a class="navbar-brand ml-auto" asp-controller="Feed" asp-action="Index">GIFgram</a>
            <div class="mr-auto">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <form class="form-inline my-2 my-lg-0">
                        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                    </form>
                    <div style="margin-left: 70px;">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout">Выход</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </nav>

    </header>
    <main>
        <div class="container">
            @if (User.Identity.IsAuthenticated)
            {
                <div class="row">
                    <div class="col-md-2">
                        <div class="d-flex justify-content-center justify-content-md-start sticky">
                            @Html.Partial("_MenuPartial")
                        </div>
                    </div>
                    <div class="col-md-10">
                        @RenderBody()
                    </div>
                </div>
            }
            else
            {
                <div class="row">
                    @RenderBody()
                </div>
            }

        </div>
    </main>
    
    @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - SocialNetworkingApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
    main {
        position: relative; 
    }
    .sticky {
        position: sticky;
        top: 70px;
    }

    html {
        overflow-y: scroll; 
    }
</style>