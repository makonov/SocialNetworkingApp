@using SocialNetworkingApp.ViewModels
@model FindProjectViewModel

<!-- Карточка с фильтрами поиска -->
<div class="card mb-4">
    <div class="card-header">
        <h5>Поиск проектов</h5>
    </div>
    <div class="card-body">
        <form asp-action="FilterProjects" asp-controller="Project" method="post">
            <div class="row">
                <!-- Поле для ввода названия -->
                <div class="col-md-12 mb-3">
                    <label asp-for="Title">Название</label>
                    <input asp-for="Title" class="form-control" placeholder="Введите название проекта">
                </div>

                <!-- Выпадающий список для фильтра по типу -->
                <div class="col-md-12 mb-3">
                    <label asp-for="TypeId">Тип проекта</label>
                    <select asp-for="TypeId" class="form-control">
                        <option value="">Выберите тип</option>
                        <option value="1">Внеучебный проект</option>
                        <option value="2">Стартап</option>
                        <option value="3">Научная работа</option>
                    </select>
                </div>
            </div>

            <!-- Кнопка для отправки формы -->
            <button type="submit" class="btn btn-primary mt-3">Найти проекты</button>
        </form>
    </div>
</div>

