@using SocialNetworkingApp.ViewModels
@model AddAlbumViewModel
<form asp-controller="Album" asp-action="AddAlbum" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input hidden asp-for="ProjectId" />
    <div class="form-group">
        <div class="form-group">
            <label asp-for="Title" class="control-label">Название</label>
            <input asp-for="Title" class="form-control">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="image-preview-0">
            <span id="imagePreview-0"></span>
            <button type="button" class="btn btn-light btn-sm" id="clear-image-0" style="display:none;"><i class="bi bi-x"></i></button>
        </div>
        <label asp-for="Description" class="control-label">Описание: </label>
        <textarea asp-for="Description" class="form-control" rows="4" style="resize: none;"></textarea>
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="d-flex justify-content-between align-items-center">
        <button type="submit" class="btn btn-primary">Создать</button>
        <label for="input-image-0" class="btn btn-light btn-sm" style="margin-top: 5px;">
            <i class="fas fa-camera"></i>
            <input asp-for="Image" hidden id="input-image-0" accept=".jpeg,.jpg,.png,.gif" style="display:none">
        </label>
    </div>
</form>

<style>
    [class*="image-preview"] {
        text-align: center;
        margin-bottom: 10px;
        position: relative;
    }

    [class*="image-preview"] button {
        position: absolute;
        top: 0;
        right: 0;
    }

    [class*="image-preview"] img {
        max-width: 100%;
        max-height: 400px;
        width: auto;
        height: auto;
    }
</style>