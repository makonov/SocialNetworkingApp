@model IEnumerable<GifAlbum>
@{

}


<div class="container mt-5">
    <div class="row">
        @foreach (var album in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="https://media.giphy.com/media/3o7abKhOpu0NwenH3O/giphy.gif" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@album.Name</h5>
                        <p class="card-text">@(album.Description != null ? album.Description : "нет описания")</p>
                        <a asp-action="Detail" asp-route-id="@album.Id" class="btn btn-primary">Открыть</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
